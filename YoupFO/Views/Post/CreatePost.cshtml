@model YoupFO.Models.Post

@{
    ViewBag.Title = "Création de votre article";
}

<h2>CreatePost</h2>

@using (Html.BeginForm(Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    
    <fieldset>
        <legend>Post</legend>

        <div>
            <input type="file" name="file" />
            <input type="submit" value="OK" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.title)
            @Html.ValidationMessageFor(model => model.title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.content, 5, 1, null)
            @Html.ValidationMessageFor(model => model.content)
        </div>

        <div class="editor-field">
            @Html.LabelFor(Model => Model.visibility)
            @Html.DropDownList("Visibility", ViewBag.Visibility as SelectList)
        </div>
      

        <p>
            <input type="submit" value="Creer" />
        </p>


    </fieldset>
}
