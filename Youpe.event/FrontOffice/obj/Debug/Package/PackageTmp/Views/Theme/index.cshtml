@using YoupRepository.Model.POCO;
@using YoupRepository.Model.DTO;

<style>
    .table th, .table tr {
        font-size: 1em;
        padding: 2px !important;
        text-align: center;
        color: #444444;
    }

    .table td {
        width: 33%;
    }

    .thumbnail h3 {
        min-height: 0px !important;
        margin-bottom: 0 !important;
        margin-top: 0 !important;
    }

    .red {
        -moz-box-shadow: 0px 0px 5px 5px #fd6864;
        -webkit-box-shadow: 0px 0px 5px 5px #fd6864;
        -o-box-shadow: 0px 0px 5px 5px #fd6864;
        box-shadow: 0px 0px 5px 5px #fd6864;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#fd6864, Direction=NaN, Strength=5);
    }

    .yellow {
        -moz-box-shadow: 0px 0px 5px 5px #ffffc7;
        -webkit-box-shadow: 0px 0px 5px 5px #ffffc7;
        -o-box-shadow: 0px 0px 5px 5px #ffffc7;
        box-shadow: 0px 0px 5px 5px #ffffc7;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#ffffc7, Direction=NaN, Strength=5);
    }

    .blue {
        -moz-box-shadow: 0px 0px 5px 5px #34cdf9;
        -webkit-box-shadow: 0px 0px 5px 5px #34cdf9;
        -o-box-shadow: 0px 0px 5px 5px #34cdf9;
        box-shadow: 0px 0px 5px 5px #34cdf9;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#34cdf9, Direction=NaN, Strength=5);
    }

    .green {
        -moz-box-shadow: 0px 0px 5px 5px #32cb00;
        -webkit-box-shadow: 0px 0px 5px 5px #32cb00;
        -o-box-shadow: 0px 0px 5px 5px #32cb00;
        box-shadow: 0px 0px 5px 5px #32cb00;
        filter: progid:DXImageTransform.Microsoft.Shadow(color=#32cb00, Direction=NaN, Strength=5);
    }
</style>
<div class="row">
    @{
        ThemePOCO theme = ViewBag.theme;
    System.Collections.Generic.IEnumerable<EventDTO> allEventsForTheme = (theme.data.Events as System.Collections.Generic.IEnumerable<EventDTO>);
}
    <section class="main-section">
        <div class="row">
            <!-- BEGIN Portfolio ROW-->

            <div class="portfolioarea top20">

                <div id="container" class="portfolioitems_container">
                    @foreach (EventDTO anEvent in allEventsForTheme)
                    {
                        <div class="filteritem big_item psd site">
                            <div class="portfolio_thumb">
                                <a href="#modal1" data-toggle="modal" class="hover_fade_in"><img src="~/Images/home/game.JPG" alt="modal portfolio" /></a>
                            </div>
                            <h4 class="portfolio_title">
                                @anEvent.Name
                                <small class="categories">
                                    @anEvent.Description
                                    <br />
                                    <br />
                                    <table class="table table-bordered" style="width:100%">
                                        <tr>
                                            <th>Libre</th>
                                            <th>Part</th>
                                            <th>Inscrip</th>
                                        </tr>
                                        <tr>
                                            <td><center>@anEvent.Slots</center></td>
                                  
                                            <td><center><span class="glyphicon glyphicon-share"></span></center></td>
                                        </tr>
                                    </table>
                                </small>
                            </h4>
                        </div>
                    }
                </div>
            </div><!-- END CONTENT -->
        </div>
    </section>
</div>







