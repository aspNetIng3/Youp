@{
    Layout = null;
}



<div ng-controller="BlogController" ng-cloak> 
        <div style="width: 500px;"> 
            <table class="table table-striped table-bordered table-condensed table-hover"> 
                <tr> 
                    <th style="width: 100px;"> 
                        <div class="btn-toolbar"><i class="btn icon-plus" ng-click="toggleAddMode()"></i></div> 
                    </th> 
                    <th style="width: 50px;">Id</th> 
                    <th>Name</th> 
                </tr> 
                <tr ng-show="addMode"> 
                    <td> 
                        <div class="btn-toolbar"> 
                            <div class="btn-group"> 
                                <i class="btn icon-save" ng-click="addBlog()"></i> 
                                <i class="btn icon-remove" ng-click="toggleAddMode()"></i> 
                            </div> 
                        </div> 
                    </td> 
                    <td></td> 
                    <td> 
                        <input ng-model="blog.name" /></td> 
                </tr> 
                <tr ng-repeat="blog in blogs | orderBy:'id':true"> 
                    <td> 
                        <div class="btn-toolbar" ng-show="blog.editMode == null || blog.editMode == false"> 
                            <div class="btn-group"> 
                                <i class="btn icon-edit" ng-click="toggleEditMode(blog)"></i> 
                                <i class="btn icon-trash" ng-click="deletePerson(blog)"></i> 
                            </div> 
                        </div> 
                        <div class="btn-toolbar" ng-show="blog.editMode == true"> 
                            <div class="btn-group"> 
                                <i class="btn icon-save" ng-click="updateBlog(blog)"></i> 
                                <i class="btn icon-remove" ng-click="toggleEditMode(blog)"></i> 
                            </div> 
                        </div> 
                    </td> 
                    <td>{{blog.id}}</td> 
                    <td> 
                        <span ng-show="blog.editMode == null || blog.editMode == false">{{blog.name}}</span> 
                        <input ng-model="blog.name" ng-show="blog.editMode == true" /> 
                    </td> 
                </tr> 
            </table> 
        </div> 
    </div> 


